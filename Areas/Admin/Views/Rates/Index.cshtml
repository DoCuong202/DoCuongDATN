@model PagedList.PagedList<BanHangOnline.Models.EF.Rate>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Danh sách đánh giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/rates" class="nav-link">Đánh giá</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Đánh giá</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Đánh giá</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách dánh giá</h3>
            <div class="card-tools">
                <a href="/admin/rates/add" class="btn btn-primary">Thêm mới</a>
                <a href="" class="btn btn-danger" id="btnDeleteAll">Xóa</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    @using (Html.BeginForm("index", "Posts", FormMethod.Get, new { }))
                    {
                        <div class="input-group mb-3">
                            @Html.TextBox("searchText", null, new { @class = "form-control", placeholder = "Nhập từ khóa tìm kiếm" })
                            <select name="starRateFilter" class="form-control">
                                <option value="">Chọn số sao</option>
                                <option value="1">1 sao</option>
                                <option value="2">2 sao</option>
                                <option value="3">3 sao</option>
                                <option value="4">4 sao</option>
                                <option value="5">5 sao</option>
                            </select>
                            <button type="submit" class="btn btn-info mx-4">Tìm kiếm</button>
                        </div>
                    }
                </div>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr class="text-center">
                        <th style="width: 50px;">
                            <input type="checkbox" id="SelectAll" />
                        </th>
                        <th style="width: 70px;">STT</th>
                        <th>Nội dung</th>
                        <th style="width: 100px;">Ngày tạo</th>
                        <th style="width: 170px;">Mức đánh giá(*)</th>
                        <th style="width: 70px;">Xóa</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.page - 1) * ViewBag.size) + 1;
                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.Id">
                                <td class="text-center" style="width: 50px;"><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td class="text-center">@i</td>
                                <td class="text-center">@item.ContentRate</td>
                                <td class="text-center">@item.CreatedDate.ToString("dd/MM/yyyy")</td>
                                <td class="text-center">@item.StartRate</td>
                                <td>
                                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào</td>
                        </tr>
                    }
                </tbody>

            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</section>
@section scripts{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm("Bạn chắc chắn xóa");
                if (conf === true) {
                    $.ajax({
                        url: '/admin/rates/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    })
                }
            });

            $('body').on('change', '#SelectAll', function () {
                var checkStatus = this.checked;
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkbox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                    } else {
                        checkbox.attr('selected', '');
                    }
                })
            })

            $('body').on('click', '#btnDeleteAll', function (e) {
                e.preventDefault();
                var str = "";
                var checkbox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkbox.each(function () {
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                        var id = $(this).val();
                        if (i === 0) {
                            str += id;
                        } else {
                            str += "," + id;
                        }
                        i++;
                    } else {
                        checkbox.attr('selected', '');
                    }
                })
                if (str.length > 0) {
                    var conf = confirm("Bạn có muốn xóa các bản ghi này hay không?");
                    if (conf === true) {
                        $.ajax({
                            url: '/admin/rates/deleteAll',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        })
                    }
                }
            })
        })
    </script>
}

