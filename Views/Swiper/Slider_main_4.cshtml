</style>
<div class="swiper .mySwiper_2">
    <div class="swiper-wrapper">
        <div class="swiper-slide">
            <img src="~/Content/Assets/images/kgquan1.jpeg" />
        </div>
        <div class="swiper-slide">
            <img src="~/Content/Assets/images/kgquan2.jpeg" />
        </div>
        <div class="swiper-slide">
            <img src="~/Content/Assets/images/kgquan3.jpg" />
        </div>
